            text-align: center;
            transition: all 0.6s ease-in-out;
        }

        input {
            background: #eee;
            border: none;
            padding: 12px 15px;
            margin: 8px 0;
            width: 100%;
            border-radius: 5px;
        }

        button {
            border-radius: 20px;
            border: 1px solid #007bff;
            background-color: #007bff;
            color: #fff;
